@model UserCreateModel
@{
    Layout = "_Authentication";
}
<h3 class="box-title mt-5 mb-0">Register Now</h3><small>Create your account and enjoy</small>
<div class="row">
    <div class="col-12">
        <form class="form-horizontal mt-3 form-material" asp-action="SignUp" method="post">
            <div class="form-group mb-3 ">
                <div class="col-xs-12">
                    <input asp-for="@Model.FirstName" class="form-control" type="text" placeholder="Adınız">
                </div>
            </div>
            <div class="form-group mb-3 ">
                <div class="col-xs-12">
                    <input asp-for="@Model.SurName" class="form-control" type="text" placeholder="Soyadınız">
                </div>
            </div>
            <div class="form-group mb-3 ">
                <div class="col-xs-12">
                    <input asp-for="@Model.UserName" class="form-control" type="text" placeholder="Kullanıcı Adınız">
                </div>
            </div>
            <div class="form-group mb-3 ">
                <div class="col-xs-12">
                    <input asp-for="@Model.Email" class="form-control" type="email" placeholder="E-Mail Adresiniz">
                </div>
            </div>
            <div class="form-group mb-3 ">
                <div class="col-xs-12">
                    <input asp-for="@Model.PhoneNumber" class="form-control" type="text" placeholder="Telefon Numaranız">
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="col-xs-12">
                    <input asp-for="@Model.Password" class="form-control" type="password" placeholder="Parolanız">
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="col-xs-12">
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" placeholder="Lütfen Parolanızı Tekrar Giriniz">
                </div>
            </div>
            <div class="form-group mb-3">
                <div class="">
                    <div class="checkbox checkbox-primary pt-0">
                        <input id="checkbox-signup" type="checkbox" class="chk-col-indigo material-inputs">
                        <label for="checkbox-signup"> I agree to all <a href="#">Terms</a></label>
                    </div>
                </div>
            </div>
            <div class="form-group text-center mt-3">
                <div class="col-xs-12">
                    <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Sign Up</button>
                </div>
            </div>
            <div class="form-group mb-0">
                <div class="col-sm-12 text-center">
                    <p>Already have an account? <a asp-action="SignIn" class="text-info ml-1">Sign In</a></p>
                </div>
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </form>
    </div>
</div>

