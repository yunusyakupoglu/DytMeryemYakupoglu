@model List<PhoneNumberListDto>
@{
    Layout = "_Panel";
}

<div class="row page-titles">
    <div class="col-md-5 col-12 align-self-center">
        <h3 class="text-themecolor mb-2">Telefon Numaraları</h3>
        <a asp-action="Create" class="btn btn-dark waves-effect waves-light">Yeni Telefon Numarası Ekle</a>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class="bg-warning text-white">
                        <tr>
                            <th>Telefon Numarası</th>
                            <th>Aktiflik</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int item = 0; item < Model?.Count; item++)
                        {
                            <tr>
                                <td>@Model[item].Definition</td>
                                <td>
                                    <input type="checkbox" name="@Model[item].Status" asp-for="@Model[item].Status" value="@Model[item].Status" />
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@Model[item].Id">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
