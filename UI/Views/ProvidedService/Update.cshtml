@model ProvidedServiceUpdateDto
@{
    Layout = "_Panel";
}

<div class="row page-titles">
    <div class="col-md-5 col-12 align-self-center">
        <h3 class="text-themecolor mb-0">Hizmetler</h3>
        <ol class="breadcrumb mb-0 p-0 bg-transparent">
            <li class="breadcrumb-item"><a asp-action="Index">Hizmetler</a></li>
            <li class="breadcrumb-item active">@Model.Title Hizmetini Güncelle</li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <form asp-action="Update" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-color"></div>
                    <div class="card-body">
                        <div class="row m-auto">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Title" class="control-label col-form-label">Başlık</label>
                                    <input type="text" asp-for="Title" name="Title" class="form-control" id="Name" placeholder="" required>
                                    <span asp-validation-for="Title"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label col-form-label">İçerik</label>
                                    <input type="text" asp-for="Description" name="Description" class="form-control" id="Name" placeholder="" required>
                                    <span asp-validation-for="Description"></span>
                                </div>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Upload</span>
                                    </div>
                                    <div class="custom-file">
                                        <input type="file" asp-for="ImagePath" name="ImagePath" class="custom-file-input" id="ImagePath">
                                        <label class="custom-file-label" asp-for="ImagePath">@Model.ImagePath</label>
                                    </div>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input material-inputs" type="checkbox" asp-for="@Model.Status">
                                    <label class="form-check-label" asp-for="@Model.Status">
                                        Aktif
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="card-body">
                        <div class="d-md-flex no-block align-items-center">
                            <div class="action-form">
                                <div class="form-group mb-0 text-center">
                                    <button type="submit" class="btn btn-info waves-effect waves-light">Güncelle</button>
                                    <a asp-action="Index" class="btn btn-dark waves-effect waves-light">Tüm Hizmetler</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

