@model AddressCreateDto
@{
    Layout = "_Panel";
}

<div class="row page-titles">
    <div class="col-md-5 col-12 align-self-center">
        <h3 class="text-themecolor mb-0">Çalışma saatleri</h3>
        <ol class="breadcrumb mb-0 p-0 bg-transparent">
            <li class="breadcrumb-item"><a asp-action="Index">Çalışma Saatleri</a></li>
            <li class="breadcrumb-item active">Yeni Çalışma Saati Ekle</li>
        </ol>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-color"></div>
                    <div class="card-body">
                        <div class="row m-auto">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Coordinate" class="control-label col-form-label">Koordinatlar</label>
                                    <input type="text" asp-for="Coordinate" name="Title" class="form-control" id="Name" placeholder="" required>
                                    <span asp-validation-for="Coordinate"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label col-form-label">Sabah</label>
                                    <input type="text" asp-for="Description" name="Description" class="form-control" id="Name" placeholder="" required>
                                    <span asp-validation-for="Description"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="card-body">
                        <div class="d-md-flex no-block align-items-center">
                            <div class="action-form">
                                <div class="form-group mb-0 text-center">
                                    <button type="submit" class="btn btn-info waves-effect waves-light">Ekle</button>
                                    <a asp-action="Index" class="btn btn-dark waves-effect waves-light">Tüm Çalışma Saatleri</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
